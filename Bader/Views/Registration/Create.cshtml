@model RegistrationViewModel


@section Scripts {

    <script>
        @{
            if (@ViewData["Successful"] != null)
            {

                <Text>
                                    var result = '@Html.Raw(ViewData["Successful"])';

                Swal.fire({
                    title: "تمت العملية بنجاح",
                    text: result,
                    icon: "success",
                    confirmButtonText: "تم"
                }).then(function () {
                    window.location.href = '@Url.Action("Index", "Registration")';
                });
                </Text>

            }
            else if (@ViewData["Falied"] != null)
            {
                <Text>
                                                            var result = '@Html.Raw(ViewData["Falied"])';

                Swal.fire({
                    icon: "error",
                    title: "فشلت العملية",
                    text: result,
                    confirmButtonText: "تم"

                });
                </Text>
            }
            else if (@ViewData["NoRegForYou"] != null)
            {
                <Text>
                                                                                            var result = '@Html.Raw(ViewData["NoRegForYou"])';

                Swal.fire({
                    icon: "error",
                    title: "فشلت العملية",
                    text: result,
                    confirmButtonText: "تم"

                });
                </Text>
            }
        }
    </script>
}
<div class="block mb-4">
    <div class="block-header border-bottom px-4 py-4">
        <h5 class="m-0">التسجيل في الجلسة</h5>
    </div>
    <div class="block-body py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post">
                    <div class="row">
                        <h5>معلومات المستخدم:</h5>

                        
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">


                                <label asp-for="Username" class="mb-1"></label>
                                <input type="text" asp-for="Username" class="form-control" class="form-control text-start" value="@ViewBag.username"  readonly/>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">

                                <label asp-for="FullNameAr" class="mb-1"></label>
                                <input type="text" asp-for="FullNameAr" class="form-control" value="@ViewBag.fullnameAr" readonly />
                                <span asp-validation-for="FullNameAr" class="text-danger"></span>
                            </div>
                        </div><!-- END ITEM -->
                   
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">

                                <label asp-for="Phone " class="mb-1"></label>
                                <input type="text" asp-for="Phone " class="form-control" value="@ViewBag.PhoneNumber" readonly />
                                <span asp-validation-for="Phone " class="text-danger"></span>



                            </div>
                        </div><!-- END ITEM -->

                        <h5>معلومات الجلسة:</h5>
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">اسم الجلسة</label>
                                <input type="text" class="form-control" value="@ViewBag.SessionNameAr" readonly />
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">اسم المادة</label>
                                <input type="text" class="form-control" value="@ViewBag.CourseNameAr" readonly />
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">العنوان</label>
                                <input type="text" class="form-control" value="@ViewBag.TitleAr" readonly />
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">عدد الطلاب المسموح به</label>
                                <input type="text" class="form-control" value="@ViewBag.NumOfStudents" readonly />
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">تاريخ الجلسة</label>
                                <input type="text" class="form-control" value="@ViewBag.SessionDate" readonly />
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">تاريخ بداية التسجيل في الجلسة</label>
                                <input type="text" class="form-control" value="@ViewBag.RegStartDate" readonly />
                            </div>
                        </div><!-- END ITEM -->
                        <!-- START ITEM -->
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label class="mb-1">تاريخ نهاية التسجيل في الجلسة</label>
                                <input type="text" class="form-control" value="@ViewBag.RegEndDate" readonly />
                            </div>
                        </div><!-- END ITEM -->

                        <input asp-for="SessionId" value="@ViewBag.sessionID"  hidden />
                        <input asp-for="FullNameEn" value="@ViewBag.NameEn" hidden/>
       
                        <div>
                            <div><button type="submit" class="btn btn-primary px-5" title="save">التسجيل في الجلسة</button></div>

                        </div>
                    </div>
                </form>


            </div>
        </div>
    </div>
</div>