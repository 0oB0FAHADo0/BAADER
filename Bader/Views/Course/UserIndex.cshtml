@model IEnumerable<CourseViewModel>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en" dir="rtl" data-theme="light">
<head>
    <style>
       
        .cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            background-color: #0F7179;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            height: 250px;
            width: 230px;
            border-radius: 20px;
            color: white;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
            }

            .card p {
                margin: 10px 0;
            }

                .card p.text {
                    font-size: 18px;
                    font-weight: bold;
                }

                .card p.CRN {
                    font-size: 14px;
                }

                .card p.Level {
                    font-size: 16px;
                    font-weight: bold;
                    color: #ffeb3b;
                }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group input, .form-group select {
                margin-top: 5px;
            }
    </style>
</head>
<body>
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header px-4 py-3">
                    <h5 class="m-0">المقررات</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
@*                             <label for="quickSearch">البحث السريع</label>
 *@                            <input type="text" id="quickSearch" class="form-control" placeholder="البحث السريع ...">
                        </div>
                        <div class="form-group">
@*                             <label for="levelFilter">اختر المستوى</label>
 *@                            <select id="levelFilter" class="form-control">
                                <option value="">اختر المستوى</option>
                                @foreach (var level in Model.Select(x => x.LevelNameAr).Distinct())
                                {
                                    <option value="@level">@level</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <div class="cards" id="courseCards">
                        @foreach (var item in Model)
                        {
                            <div class="card" data-level="@item.LevelNameAr">
                                <p class="text">@item.CourseNameEn</p>
                                <p class="text">@item.CourseNameAr</p>
                                <p class="CRN">رمز المقرر: @item.CourseNum</p>
                                <p class="Level">@item.LevelNameAr</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Page Wrap -->

    <script>
        document.getElementById('levelFilter').addEventListener('change', function () {
            var selectedLevel = this.value;
            var cards = document.querySelectorAll('#courseCards .card');
            cards.forEach(function (card) {
                var level = card.getAttribute('data-level');
                if (selectedLevel === "" || level === selectedLevel) {
                    card.style.display = "flex";
                } else {
                    card.style.display = "none";
                }
            });
        });

        document.getElementById('quickSearch').addEventListener('input', function () {
            var query = this.value.toLowerCase();
            var cards = document.querySelectorAll('#courseCards .card');
            cards.forEach(function (card) {
                var courseNameEn = card.querySelector('.text').textContent.toLowerCase();
                var courseNameAr = card.querySelectorAll('.text')[1].textContent.toLowerCase();
                if (courseNameEn.includes(query) || courseNameAr.includes(query)) {
                    card.style.display = "flex";
                } else {
                    card.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>
