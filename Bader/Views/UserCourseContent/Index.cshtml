@model IEnumerable<ContentViewModel>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en" dir="rtl" data-theme="light">
<head>
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            justify-content: center;
        }

        .card {
            border: 1px solid #454343;
            border-radius: 8px;
            padding: 16px;
            width: 315px;
            height: 370px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            background-color: #e9f1f0;
            cursor: pointer;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-header {
            font-weight: bold;
            font-size: 1.2em;
            margin-bottom: 8px;
            background-color: #0F7179;
            color: white;
        }

        .card-body {
            margin-bottom: 8px;
            font-size: 25px;
            font-weight: 500;
            text-align: center;
        }

        .card-footer {
            color: white;
            background-color: #0F7179;
            font-size: 20px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
            gap: 10px;
        }

            .pagination button {
                padding: 10px 20px;
                margin: 0 5px;
                background-color: #0F7179;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .pagination button:disabled {
                    background-color: #ccc;
                    cursor: not-allowed;
                }

        .pagination-info {
            font-size: 18px;
        }
    </style>
</head>
<body>
    <section class="page_wrap">
        <div class="page_content">
            <div class="block mb-4">
                <div class="block-header border-bottom px-4 py-3">
                    <h5 class="m-0">المقررات</h5>
                    <div class="d-flex gap-2">
                        <div class="form-group">
                            <input type="text" id="searchInput" class="form-control table__quick_search" placeholder="البحث السريع ...">
                        </div>
                    </div>
                </div>
                <div class="block-body">
                    <div class="card-container" id="contentCards">
                        @foreach (var item in Model)
                        {
                            <div class="card" data-content-id="@item.GUID" onclick="viewContents('@item.GUID')">
                                <div class="card-header">رقم المقرر : @item.CourseId</div>
                                <div class="card-body">
                                    <div>@item.TitleAr</div>
                                    </div>
                                <div class="card-footer">@Html.Raw(item.Links)</div>
                            </div>
                        }
                    </div>

                    <div class="pagination">
                        <button id="prevBtn" disabled>السابق</button>
                        <span class="pagination-info" id="paginationInfo">صفحة 1 من 1</span>
                        <button id="nextBtn">التالي</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById('searchInput');
            const cards = Array.from(document.querySelectorAll('.card'));
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const paginationInfo = document.getElementById('paginationInfo');
            const cardsPerPage = 6;
            let currentPage = 1;
            let filteredCards = cards;

            function displayCards() {
                if (filteredCards.length === 0) {
                    paginationInfo.textContent = "لا توجد محتويات متوفرة";
                    prevBtn.style.display = 'none';
                    nextBtn.style.display = 'none';
                    cards.forEach(card => card.style.display = 'none');
                } else {
                    const start = (currentPage - 1) * cardsPerPage;
                    const end = start + cardsPerPage;
                    cards.forEach(card => card.style.display = 'none');
                    filteredCards.slice(start, end).forEach(card => card.style.display = '');

                    prevBtn.style.display = '';
                    nextBtn.style.display = '';
                    prevBtn.disabled = currentPage === 1;
                    nextBtn.disabled = currentPage === Math.ceil(filteredCards.length / cardsPerPage);
                    paginationInfo.textContent = `صفحة ${currentPage} من ${Math.ceil(filteredCards.length / cardsPerPage)}`;
                }
            }

            function filterCards() {
                const searchInputValue = searchInput.value.toLowerCase();

                filteredCards = cards.filter(card => {
                    const TitleAr = card.querySelector('.card-body').children[0].innerText.toLowerCase();
                    const Links = card.querySelector('.card-footer').innerText.toLowerCase();

                    const matchesSearch = TitleAr.includes(searchInputValue) || Links.includes(searchInputValue);
        
                    return matchesSearch;
                });

                currentPage = 1;
                displayCards();
            }

            displayCards();

            nextBtn.addEventListener('click', function () {
                currentPage++;
                displayCards();
            });

            prevBtn.addEventListener('click', function () {
                currentPage--;
                displayCards();
            });

            searchInput.addEventListener('input', filterCards);
        });

        function viewContents(contentId) {
            // Redirect to ViewContents action with the courseId (GUID)
            window.location.href = '/UserCourseContent/ViewContent/' + contentId;
        }
    </script>
</body>
</html>
