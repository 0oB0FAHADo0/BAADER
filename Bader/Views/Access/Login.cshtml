@using Bader.ViewModels
@model UserViewModel
@{
    Layout = null;
}
<html lang="ar">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            background-color: #adb5bd;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .wrapper {
            background-color: white;
            text-align: center;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 90%;
            width: 400px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .wrapper h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .input-box {
            width: 100%;
            height: 50px;
            margin: 15px 0;
        }

        .input-box input {
            width: 100%;
            height: 100%;
            background: #F5F5F5;
            outline: none;
            border: 2px solid rgba(255, 255, 255, .2);
            border-radius: 25px;
            font-size: 16px;
            color: black;
            padding: 10px 15px;
            text-align: right;
        }

        .btn {
            background-color: seagreen;
            color: white;
            padding: 14px 20px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: darkgreen;
        }

        .alert {
            color: red;
            margin-bottom: 15px;
        }

        /* Responsive adjustments */
          (max-width: 480px) {
            .wrapper {
                padding: 1rem;
                border-radius: 15px;
            }

            .wrapper h1 {
                font-size: 20px;
            }

            .input-box input {
                font-size: 14px;
                padding: 10px;
            }

            .btn {
                padding: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h1 class="m-0">تسجيل الدخول</h1>
            </div>
            <div class="block-body py-5">
                <form method="post">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                    <div class="input-box">
                        <input type="text" asp-for="Username" class="form-control" placeholder="اسم المستخدم" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <input type="password" asp-for="Password" class="form-control text-start" placeholder="كلمة المرور" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn" title="save">تسجيل الدخول</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>
