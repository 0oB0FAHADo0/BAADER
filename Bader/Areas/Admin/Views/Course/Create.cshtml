@model CourseViewModel

@{
    ViewData["Title"] = "Create";
    var userrole = User.FindFirst("Role").Value;
    
}

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0">إضافة مقرر</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="CourseNameAr" class="mb-1"></label>
                                        <input asp-for="CourseNameAr" type="text" placeholder="رياضيات" class="form-control">
                                        <span asp-validation-for="CourseNameAr" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="CourseNameEn" class="mb-1"></label>
                                        <input asp-for="CourseNameEn" type="text" placeholder="Math" class="form-control text-start">
                                        <span asp-validation-for="CourseNameEn" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="CourseNum" class="mb-1"></label>
                                        <input asp-for="CourseNum" type="text" placeholder="1234" class="form-control text-start">
                                        <span asp-validation-for="CourseNum" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="LevelNameAr" class="mb-1"></label>
                                        <select asp-for="LevelId" id="LevelId" class="form-control text-start" asp-items="ViewBag.LevelsList"> </select>
                                    </div>
                                </div><!-- END ITEM -->
                                @if (userrole == "SuperAdmin")
                                {
                                    <!-- START ITEM -->
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label asp-for="CollageNameAr" class="mb-1"></label>
                                            <select asp-for="CollegeId" id="CollegeId" class="form-control text-start" asp-items="ViewBag.CollagesList">
                                                <option value="">اختر الكلية</option>
                                            </select>

                                        </div>
                                    </div>

                                    <!-- END ITEM -->
                                }

                                @if(userrole == "SuperAdmin")
                                {
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label asp-for="MajorNameAr" class="mb-1"></label>
                                            <select asp-for="MajorId" id="MajorId" class="form-control text-start" asp-items="ViewBag.MajorsList" disabled>
                                                <option value="">اختر التخصص</option>
                                            </select>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label asp-for="MajorNameAr" class="mb-1"></label>
                                            <select asp-for="MajorId" id="MajorId" class="form-control text-start" asp-items="ViewBag.MajorsList" >
                                                <option value="">اختر التخصص</option>
                                            </select>
                                        </div>
                                    </div>
                                }


                                <!-- START ITEM -->
                                @* <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="MajorId" class="mb-1">اسم التخصص</label>
                                        <select asp-for="MajorId" id="MajorId" class="form-control text-start" asp-items="ViewBag.MajorsList"> </select>
                                    </div>
                                </div> *@<!-- END ITEM -->
                                
                                <div >
                                    <div><button type="submit" class="btn btn-primary px-5" title="save">حفظ</button></div>
                                    <div></div>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{

        <script>
            @{
                if (@ViewData["Successful"] != null)
                {

                    <Text>
                    var result = '@Html.Raw(ViewData["Successful"])';

                    Swal.fire({
                        title: "تمت العملية",
                        text: result,
                        icon: "success"
                    }).then(function () {
                        window.location.href = '@Url.Action("Index", "Course")';
                    });
                    </Text>

                }
                else if (@ViewData["Falied"] != null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Falied"])';

                    Swal.fire({
                        icon: "error",
                        title: "فشلت العملية",
                        text: result

                    });
                    </Text>
                }
            }
        </script>

        <script>
            $(document).ready(function () {
                // Disable major dropdown initially
                $('#MajorId').prop('disabled', true);

                // Trigger when the college dropdown changes
                $('#CollegeId').on('change', function () {
                    var collegeId = $(this).val();

                    if (collegeId) {
                        // Enable the major dropdown
                        $('#MajorId').prop('disabled', false);

                        // Make an AJAX call to fetch the majors
                        $.ajax({
                            url: '@Url.Action("GetMajorsByCollege", "Course")', 
                            type: 'GET',
                            data: { collegeId: collegeId },
                            success: function (data) {
                                // Clear the previous options
                                $('#MajorId').empty();

                                // Populate the major dropdown with the received data
                                $.each(data, function (index, major) {
                                    $('#MajorId').append(new Option(major.text, major.value));
                                });
                            },
                            error: function () {
                                Swal.fire({
                                    icon: "error",
                                    title: "خطأ",
                                    text: "حدث خطأ أثناء جلب التخصصات"
                                });
                            }
                        });
                    } else {
                        // Disable the major dropdown if no college is selected
                        $('#MajorId').prop('disabled', true);
                        $('#MajorId').empty();
                    }
                });
            });
        </script>


        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
