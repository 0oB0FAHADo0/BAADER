@model CourseViewModel

@{
    ViewData["Title"] = "Edit";
    var userrole = User.FindFirst("Role").Value;
}

<section class="page_wrap">
    <div class="page_content">
        <div class="block mb-4">
            <div class="block-header border-bottom px-4 py-4">
                <h5 class="m-0"> تعديل المقرر</h5>
            </div>
            <div class="block-body py-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="GUID" />
@*                             <input type="hidden" asp-for="Id" />
 *@                            <div class="row">
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="CourseNameAr" class="mb-1"></label>
                                        <input asp-for="CourseNameAr" type="text" placeholder="رياضيات" class="form-control">
                                        <span asp-validation-for="CourseNameAr" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="CourseNameEn" class="mb-1"></label>
                                        <input asp-for="CourseNameEn" type="text" placeholder="Math" class="form-control text-start">
                                        <span asp-validation-for="CourseNameEn" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="CourseNum" class="mb-1"></label>
                                        <input asp-for="CourseNum" type="text" placeholder="1234" class="form-control text-start">
                                        <span asp-validation-for="CourseNum" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->
                                <!-- START ITEM -->
                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="LevelId" class="mb-1"></label>
                                        <select asp-for="LevelId" id="LevelId" class="form-control text-start" asp-items="ViewBag.LevelsList">
                                        <option value="0">اختر المستوى</option>
                                        </select>
                                        <span asp-validation-for="LevelId" class="text-danger"></span>
                                    </div>
                                </div><!-- END ITEM -->

                                @if (userrole == "SuperAdmin")
                                {
                                    <!-- START ITEM -->
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label asp-for="CollageNameAr" class="mb-1"></label>
                                            <select asp-for="CollegeId" id="CollegeId" class="form-control text-start" asp-items="ViewBag.CollagesList">
                                            <option value="0">اختر الكلية</option>
                                            </select>
                                            <span asp-validation-for="CollegeId" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <!-- END ITEM -->
                                }

                                <div class="col-md-6">
                                    <div class="mb-4">
                                        <label asp-for="MajorNameAr" class="mb-1"></label>
                                        <select asp-for="MajorId" id="MajorId" class="form-control text-start" asp-items="ViewBag.MajorsList" >
                                            <option value="0">اختر التخصص</option>
                                        </select>
                                        <span asp-validation-for="MajorId" class="text-danger"></span>

                                    </div>
                                </div><!-- END ITEM -->

                                <div>
                                <div >
                                    <div><button type="submit" class="btn btn-primary px-4" title="save">حفظ</button></div>
                                    <div></div>
                                  
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{

        <script>
            @{
                if (@ViewData["Successful"] != null)
                {

                    <Text>
                     var result = '@Html.Raw(ViewData["Successful"])';

                    Swal.fire({
                        title: "تمت العملية",
                        text: result,
                        icon: "success"
                        confirmButtonText: "تم"
                    }).then(function () {
                        window.location.href = '@Url.Action("Index", "Course")';
                    });
                    </Text>

                }
                else if (@ViewData["Falied"] != null)
                {
                    <Text>
                    var result = '@Html.Raw(ViewData["Falied"])';

                    Swal.fire({
                        icon: "error",
                        title: "فشلت العملية",
                        text: result
                        confirmButtonText: "تم"
                    });
                    </Text>
                }
            }
        </script>

        <script>
            $(document).ready(function () {
                // Initially check if there's a pre-selected college
                var selectedCollegeId = $('#CollegeId').val();

                // Function to fetch and populate majors based on the college ID
                function fetchMajors(collegeId, selectedMajorId = null) {
                    if (collegeId && collegeId !== "0") {
                        // Enable the major dropdown
                        $('#MajorId').prop('disabled', false);

                        // Make an AJAX call to fetch the majors
                        $.ajax({
                            url: '@Url.Action("GetMajorsByCollege", "Course")', // Ensure this action exists in your controller
                            type: 'GET',
                            data: { collegeId: collegeId },
                            success: function (data) {
                                // Clear the previous options
                                $('#MajorId').empty();

                                // Add default option for majors
                                $('#MajorId').append(new Option('اختر التخصص', '0'));

                                // Populate the major dropdown with the received data
                                $.each(data, function (index, major) {
                                    $('#MajorId').append(new Option(major.text, major.value));
                                });

                                // If a major is pre-selected (for editing), set it
                                if (selectedMajorId) {
                                    $('#MajorId').val(selectedMajorId);
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    icon: "error",
                                    title: "خطأ",
                                    text: "حدث خطأ أثناء جلب التخصصات"
                                });
                            }
                        });
                    } else {
                        // Disable and reset the major dropdown if "اختر الكلية" is selected
                        $('#MajorId').prop('disabled', true);
                        $('#MajorId').empty();
                        $('#MajorId').append(new Option('اختر التخصص', '')); // Reset to default option
                    }
                }

                // Fetch majors if there's a pre-selected college (for editing a course)
                if (selectedCollegeId && selectedCollegeId !== "0") {
                    // Pre-selected major ID (from the course you're editing)
                    var selectedMajorId = $('#MajorId').data('selected-major-id'); // Store the major ID in the HTML or inject via the backend
                    fetchMajors(selectedCollegeId, selectedMajorId);
                }

                // Trigger when the college dropdown changes
                $('#CollegeId').on('change', function () {
                    var collegeId = $(this).val();
                    fetchMajors(collegeId);
                });
            });

        </script>


        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
